<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="649.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_cw.AddArticleController">
    <children>
        <AnchorPane prefHeight="658.0" prefWidth="147.0" style="-fx-background-color: #D2691E;">
            <children>
                <Label layoutX="20.0" layoutY="61.0" prefHeight="46.0" prefWidth="107.0" text="  Add Article">
                    <font>
                        <Font name="Cambria Bold" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="44.0" layoutY="96.0" text="Details">
                    <font>
                        <Font name="Cambria Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="157.0" layoutY="46.0" prefHeight="22.0" prefWidth="171.0" text="1.   Enter the article id :">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="156.0" layoutY="248.0" prefHeight="22.0" prefWidth="189.0" text="2.   Enter the article title :">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="156.0" layoutY="372.0" prefHeight="22.0" prefWidth="182.0" text="3.   Enter the article content :">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="156.0" layoutY="475.0" prefHeight="22.0" prefWidth="182.0" text="4.   Select article image:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="articleid" layoutX="386.0" layoutY="44.0" prefHeight="22.0" prefWidth="250.0" />
        <TextArea fx:id="articletitle" layoutX="386.0" layoutY="214.0" prefHeight="91.0" prefWidth="250.0" promptText="Enter the article title here">
            <font>
                <Font name="Cambria" size="13.0" />
            </font>
        </TextArea>
        <TextArea fx:id="articlecontent" layoutX="386.0" layoutY="337.0" prefHeight="91.0" prefWidth="250.0" promptText="Enter the article content here">
            <font>
                <Font name="Cambria" size="13.0" />
            </font>
        </TextArea>
        <Button layoutX="386.0" layoutY="471.0" mnemonicParsing="false" onAction="#onChooseImageClick" prefHeight="26.0" prefWidth="115.0" text="Choose Image">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button layoutX="435.0" layoutY="592.0" mnemonicParsing="false" onAction="#onBackbuttonclick" prefHeight="26.0" prefWidth="58.0" text="Back">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button layoutX="732.0" layoutY="592.0" mnemonicParsing="false" onAction="#onExitbuttonclick" prefHeight="30.0" prefWidth="52.0" text="Exit">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button layoutX="524.0" layoutY="592.0" mnemonicParsing="false" onAction="#onSavebuttonclick" text="Save article and add new">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
