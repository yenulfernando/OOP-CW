<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_cw.RecommendationController">

    <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="50.0" prefWidth="700.0" spacing="20.0">
        <!-- Title -->
        <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Recommended Articles" />

        <!-- Scrollable content area for recommendations -->
        <ScrollPane prefHeight="438.0" prefWidth="700.0">
            <VBox fx:id="recommendationsContainer" alignment="TOP_LEFT" spacing="20.0" style="-fx-padding: 10;">
                <!-- Articles will be dynamically added here by the controller -->
            </VBox>
        </ScrollPane>
    </VBox>
   <Button layoutX="698.0" layoutY="561.0" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" />
</AnchorPane>
