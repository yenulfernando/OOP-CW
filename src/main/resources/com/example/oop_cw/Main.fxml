            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="ECHOFEED" />
            <Label style="-fx-font-size: 12px;" text="Stay Informed, Stay Inspired" />
        </VBox>
    </HBox>

    <!-- Categories Buttons -->
    <VBox layoutX="10.0" layoutY="60.0" spacing="10" />

    <!-- Main Image Display -->
    <ImageView fx:id="imageView" fitHeight="122.0" fitWidth="167.0" layoutX="22.0" layoutY="226.0" style="-fx-border-color: black;" />

    <!-- Bottom Buttons -->
    <VBox layoutX="200.0" layoutY="280.0" spacing="10" />

    <!-- Exit Button -->
    <Button layoutX="540.0" layoutY="14.0" onAction="#handleExitAction" text="Exit" />
     <Button fx:id="btnHealth" layoutX="161.0" layoutY="110.0" onAction="#handleCategoryAction" text="Health" />
