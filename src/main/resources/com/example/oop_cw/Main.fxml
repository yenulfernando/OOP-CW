     <Button fx:id="btnMostLike" layoutX="420.0" layoutY="283.0" onAction="#handleMostLikeAction" text="See What's Recommend For You" />
   <ImageView fitHeight="243.0" fitWidth="308.0" layoutY="159.0">
      <image>
         <Image url="@pexels-ibrahimboran-3582392.jpg" />
      </image>
   </ImageView>
